@{
}
@model EventManagementMVC.Models.UserRegistration

@{
    ViewBag.Title = "User Details";
}

<h2>User Details</h2>

<div class="table-responsive">
    <table class="table table-bordered">
        <tr><th>User Name</th><td>@Model.UserName</td></tr>
        <tr><th>Email</th><td>@Model.UserEmail</td></tr>
        <tr><th>Age</th><td>@Model.Age</td></tr>
        <tr><th>Gender</th><td>@Model.Gender</td></tr>
        <tr><th>Phone Number</th><td>@Model.PhoneNumber</td></tr>
        <tr><th>Address</th><td>@Model.Address</td></tr>
        <tr><th>City</th><td>@Model.City</td></tr>
        <tr><th>State</th><td>@Model.State</td></tr>
        <tr><th>Pincode</th><td>@Model.Pincode</td></tr>
        <tr><th>Role</th><td>@(Model.Role != null ? Model.Role.RoleName : "-")</td></tr>
    </table>
</div>
<p>
    <a href="@Url.Action("Edit", new { id = Model.UserID })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-default">Back to List</a>
</p>
