@*
  Simple layout for Login / Register pages
  Loads Bootstrap and site styles (same as normal pages)
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - EventManagement</title>

    <!-- ✅ Include Bootstrap & site styles just like _Layout.cshtml -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- ✅ Normal container area -->
    <div class="container mt-5">
        @RenderBody()
    </div>

    <!-- ✅ Include Bootstrap scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
