@{
}
@model IEnumerable<EventManagementMVC.Models.EventRegister>

<h2>Event List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Event</a>
</p>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>Seats</th>
            <th>Ticket Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.EventDate.ToShortDateString()</td>
                <td>@item.Location</td>
                <td>@item.TotalSeats</td>
                <td>@item.TicketPrice</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EventID" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@item.EventID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.EventID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
