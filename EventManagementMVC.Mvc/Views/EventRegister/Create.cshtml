@model EventManagementMVC.Models.EventRegister

<h2>Create New Event</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>Event Name</label>
        <input asp-for="EventName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="EventDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Date</label>
        <input asp-for="EventDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Start Time</label>
        <input asp-for="EventTime" type="time" class="form-control" />
    </div>

    <div class="form-group">
        <label>End Time</label>
        <input asp-for="EventEndTime" type="time" class="form-control" />
    </div>

    <div class="form-group">
        <label>Location</label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="form-group">
        <label>Total Seats</label>
        <input asp-for="TotalSeats" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ticket Price</label>
        <input asp-for="TicketPrice" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label>Status</label>
        <input asp-for="Status" class="form-control" />
    </div>

    <br />
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}
